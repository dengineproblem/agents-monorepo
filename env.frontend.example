# Frontend Environment Variables
# Скопируйте этот файл как .env.frontend и обновите значения

# ============================================
# API Configuration
# ============================================

# URL backend API (внутри Docker сети)
NEXT_PUBLIC_API_URL=http://agent-service:8082

# Базовый URL приложения
NEXT_PUBLIC_APP_URL=http://localhost

# ============================================
# Feature Flags
# ============================================

NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# Supabase (если используется на frontend)
# ============================================

VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-publishable-key

# ============================================
# ВАЖНО: Обновите эти значения
# ============================================
# 
# 1. Скопируйте переменные из вашего Lovable проекта
# 2. Создайте файл: cp env.frontend.example .env.frontend
# 3. Отредактируйте .env.frontend под ваши нужды
