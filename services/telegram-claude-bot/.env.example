# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Bot Settings
ASSISTANT_NAME=Claude

# Agent Brain (tools endpoint)
BRAIN_SERVICE_URL=http://agent-brain:7080

# Service-to-service auth (shared secret between bot and agent-brain)
BRAIN_SERVICE_SECRET=your_shared_secret_here

# Admin Telegram IDs (comma-separated, for admin-only tools like createUser)
ADMIN_TELEGRAM_IDS=123456789,987654321

# OpenAI (for voice transcription via Whisper)
OPENAI_API_KEY=your_openai_key_here

# Rate limiting (optional)
# RATE_LIMIT_MSG_PER_MINUTE=5
# RATE_LIMIT_MSG_PER_HOUR=30

# Timezone (optional)
TZ=Europe/Moscow
